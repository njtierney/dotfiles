options(RDocs.override = TRUE)

.First <- function() {
  options(
    repos = c(CRAN = "https://cran.rstudio.com/"),
    browserNLdisabled = TRUE,
    deparse.max.lines = 2)
}

if (interactive()) {
  suppressMessages(require(devtools))
  suppressMessages(require(testthat))
}

# devtools options

options(
  devtools.name = "Nicholas Tierney",
  devtools.desc.author = 'person("Nicholas", "Tierney", email = "nicholas.tierney@gmail.com", role = c("aut", "cre"))',
  devtools.desc.license = "MIT + file LICENSE"
)
